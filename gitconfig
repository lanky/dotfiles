[user]
      name = Stuart Sears
      email = stuart@sjsears.com
  [push]
      default = simple
  [alias]
      st = status
      ci = commit -v
      cp = cherry-pick
      unstage = reset HEAD
      dt = difftool
      br = branch -v
      co = checkout
      pl = log --graph --color --pretty=format:'%Cred%h%Creset - %Cgreen[%ci] %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
      ls = ls-files
	lst = status .
  [diff]
      tool = vimdiff
  [core]
      editor = vim
	autocrlf = input
  [color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
  [difftool]
      prompt = off

