# vim: set ts=2 sw=2 sts=2 ci et:
[user]
  name = Stuart Sears
  email = stuart@sjsears.com
[push]
  default = simple
[alias]
  bl = log  --color \
       --abbrev-commit \
       --pretty=format:'%Cred%h%Creset %Cgreen[%cd]%Creset %s - %Cblue%an%Creset %C(yellow)%d%Creset' \
       --date=relative \
       -10
  br = branch -v
  ci = commit -v
  co = checkout
  cp = cherry-pick
  dt = difftool
  fp = format-patch
  ls = ls-files
  lst = status .
  pl = log --graph \
       --color \
       --pretty=format:'%Cred%h%Creset - %Cgreen[%ci] %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' \
       --abbrev-commit
  ncl = log --pretty=format:'%h -%d %s (%cr) <%an>' --abbrev-commit
  st = status
  unstage = reset HEAD
  cpa = cherry-pick --abort
  cps = cherry-pick --skip
  cpc = cherry-pick --continue
[diff]
  tool = nvim -d
[core]
  editor = nvim
  autocrlf = input
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[difftool]
  prompt = off
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[pull]
  rebase = true
[rebase]
  autostash = true
  autoSquash = true
[init]
  defaultBranch = master
[commit]
  verbose = true
[url "ssh://git@github.com"]
    pushinsteadOf = "https://github.com"
